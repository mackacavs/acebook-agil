<% @posts.each do |post| %>
  <%= form_for post do |form| %>
  <p id="<%=post.id%>">
    <%= @post.created_at.strftime("%d/%m/%Y") %>
    <%= form.text_field :message,:readonly => true %>
    <%= form.submit "Save" %>
  </p>
 <% end %>
<% end %>

<%= link_to new_post_path do %>
  New post
<% end %>
